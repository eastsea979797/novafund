<?xml version="1.0" encoding="UTF-8"?>

<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/security
        http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <http auto-config="true" use-expressions="true">
        <intercept-url pattern="/join" access="isAnonymous()"/>
        <intercept-url pattern="/user/**" access="hasRole('USER')"/>
        <intercept-url pattern="/admin/**" access="hasRole('ADMIN')"/>
        <intercept-url pattern="/" access="permitAll"/>
        <intercept-url pattern="/**" access="permitAll"/>
        <intercept-url pattern="/resources/**" access="permitAll"/>

        <form-login
            login-page="/login.action"
            login-processing-url="/login_ok.action"
            authentication-success-handler-ref="authSuccessHandler"
            default-target-url="/"
            authentication-failure-url="/login.action?error=true"
            always-use-default-target="false"
            username-parameter="userId"
            password-parameter="pwd"/>
        
        <logout logout-url="/logout.action" logout-success-url="/"/>
        
    </http>
    
    <beans:bean id="authSuccessHandler"
    	class="com.exe.fund.util.RefererAuthenticationSuccessHandler">
    	<beans:property name="defaultTargetUrl" value="/"/>
    </beans:bean>
    <authentication-manager>
        <authentication-provider ref="authProvider"/>
    </authentication-manager>
    <authentication-manager alias="authenticationManager">
    	<authentication-provider ref="authProvider"/>
	</authentication-manager>
    
    <!-- 테스트용
    <authentication-manager>
    	<authentication-provider>
    		<user-service>
    			<user name="admin@naver.com" password="1234" authorities="ADMIN,USER"/>
    			<user name="user@naver.com" password="1234" authorities="USER"/>
    		</user-service>
    	</authentication-provider>
    </authentication-manager>-->
	
	<beans:bean id="bcryptEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>
    
	<beans:bean id="authProvider" class="org.springframework.security.authentication.dao.DaoAuthenticationProvider">
		<beans:property name="userDetailsService" ref="jdbcUserService"/>
		<beans:property name="passwordEncoder" ref="bcryptEncoder"/>
	</beans:bean> 
	
	<beans:bean id="jdbcUserService" class="org.springframework.security.core.userdetails.jdbc.JdbcDaoImpl">
		<beans:property name="dataSource" ref="dataSource"/>
		<beans:property name="usersByUsernameQuery" 
		value="select userId as username, pwd as password, enabled 
			from member where userId=?"/>
		<beans:property name="authoritiesByUsernameQuery" 
		value="select userId as username, role from member where userId=?"/>
	</beans:bean>
	
</beans:beans>